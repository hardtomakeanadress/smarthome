<article>
    <section class="clearfix">
        <figure class="pull-left" id="back">
            <img src="images/back-icon.png" alt="back icon" width="50px" height="auto">
            <figcaption>Back</figcaption>
        </figure>
        <figure class="pull-right">
            <img src="images/balcony.png" alt="balcony icon" width="150px" height="auto">
            <figcaption>Balcony</figcaption>
        </figure>
	</section>
	<section class="env">
		<table>
			<thead>
				<tr>
					<th>Sensor</th>
					<th>Value</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><img src="images/environmental/temperature.png" alt="temperature icon" width="50px" height="100px"></td>
					<td><spam><%= temperature %></spam><span>&#8451;</span></td>
				</tr>
				<tr>
					<td><img src="images/environmental/humidity.png" alt="humidity icon" width="50px" height="50px"></td>
					<td><spam><%= humidity %></spam><span>%</span></td>
				</tr>
				<tr>
					<td><img src="images/environmental/voltage.png" alt="battery icon" width="50px" height="100px"></td>
					<td><spam><%= voltage %></spam><span>V</span></td>
				</tr>
				<tr>
					<td><img src="images/environmental/datetime.png" alt="calendar icon" width="50px" height="50px"></td>
					<td><spam><%= datetime %></spam></td>
				</tr>
			</tbody>		
		</table>	
    </section>
</article>